<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/savedCreditCard"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >




    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="end"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        tools:ignore="RtlSymmetry">
        <ImageView
            android:id="@+id/removeCard"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_remove"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccentLight">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@+id/cardNumberTxt"
            android:layout_toRightOf="@+id/cardNumberTxt"
            android:src="@drawable/bt_ic_card" />

        <TextView
            android:id="@+id/cardNumberTxt"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginStart="40dp"

            android:gravity="center_vertical"

            android:text="@string/default_card_num"

            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />


    </LinearLayout>

    </LinearLayout>

</LinearLayout>